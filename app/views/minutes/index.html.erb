<p style="color: green"><%= notice %></p>

<h1>Minutes(<%= @course.name %>)</h1>

<div id="minutes">
  <% @minutes.each do |minute| %>
    <p>
      <%= link_to minute.title, minute %>
      <span id="attendance_link">
        <%= link_to '出席を登録', new_minute_attendance_path(minute.id) %>
      </span>
    </p>
  <% end %>
</div>

<div>
  <div>
    <%= link_to "議事録作成", new_course_minute_path(@course) %>
  </div>
  <div>
    <%= link_to "#{@course.name}詳細", course_path(@course) %>
  </div>
</div>
<% unless member_signed_in? %>
  <div>
    <p>
      メンバー登録されていない方 : <%= link_to 'メンバー登録', new_member_registration_path  %>
    </p>
    <p>
      メンバー登録されている方 : <%= link_to 'ログイン', new_member_session_path %>
    </p>
  </div>
<% end %>
